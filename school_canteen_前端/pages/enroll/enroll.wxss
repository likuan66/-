.enroll input{
  /* border: 1px solid black; */
  margin-top: 20rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  padding: 20rpx 0 5rpx 0;
  background-color: #f7f1f1;
}

.plas{
  margin-left: 20rpx;
  color: #ccc;
}
/* 输入框样式结束 */

/* 注册按钮样式开始 */
.register_btn_area{
  width: 100%;
  margin: 0 auto;
  margin-top: 30rpx;
  
}
.register_btn{
  color: white;
  font-weight: bold;
  font-size: 35rpx;
  height: 100rpx;
  width: 95%;
  background-color:  #ff9999;
  margin-top: 50rpx;
  margin-bottom: 30rpx;
  padding-top: 10rpx;
  text-align: center;
}
/* .register_btn_hover{
  background-color: red;
} */
/* 注册按钮样式结束 */

/* 已注册文字链接样式开始 */
.login_txt{
  color:  #8c8c8c;
  font-size: 25rpx;
  margin-left: 5%;
  
}
.login_txt:hover{
  color: black;

}

.row{
  position: relative;
  width: 100%;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}
.row input{
  width: 100%;
  height:100%;
}
.codeBtn{
  position: absolute;
  right: 0;
  top: 0;
  color: #bbb;
  width: 30%;
  font-size: 26rpx;
  line-height: 80rpx;
}
.subBtn{
  width: 200rpx;
  background: #ccc;
  color: #000;
  border-radius: 50rpx;
  line-height: 80rpx;
}

/* 已注册文字链接样式结束 */
